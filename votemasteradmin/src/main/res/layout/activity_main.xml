<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="380dp"
            android:layout_margin="15dp"
            android:src="@drawable/upload"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_margin="19dp"

            android:layout_height="50dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="votes Results "
                android:layout_gravity="center|left"
                android:textSize="18sp"
                android:fontFamily="@font/poppinsmedium"
                android:textColor="@color/green"/>
            <ImageView
                android:id="@+id/checkID"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:src="@drawable/right"
                android:layout_gravity="center|right"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1.5dp"
                android:layout_gravity="bottom"
                android:layout_marginTop="7dp"

                android:layout_marginRight="25dp"

                android:background="@color/green"
                />
        </FrameLayout>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="The picture you are taking it will be added in the Database for viewing by the users in order to verify  their casted vote was counted in the chosen organisation , and also to ba able to calculate the votes of their casted organisation and others. "
                android:textColor="@color/green"
                android:fontFamily="@font/poppiesregular"
                />

            <Button
                android:id="@+id/camera_button"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="15dp"
                android:textColor="@color/white"
                android:background="@drawable/botton_bg"
                android:text="Take Picture" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Printed votes inside the container"
                android:textColor="@color/green"
                android:layout_marginTop="40dp"
                android:layout_gravity="center"
               android:fontFamily="@font/poppinsbold"
                />

            <!-- add ImageView to display the captured image -->
            <ImageView
                android:id="@+id/click_image"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:layout_marginTop="10dp"
                 />


        </LinearLayout>




    </LinearLayout>




</ScrollView>